@model CashBoxModel.Height

@using (Ajax.BeginForm("_Edit", "Height", new AjaxOptions()
{
    Confirm = "Are you sure you want to Edit this Height?",
    LoadingElementId = "divLoading",
    OnBegin = "Begin",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "list",
    OnSuccess = "Successful",
    OnFailure = "Failed"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID, new { @Id = "txtheightID" })
<div class="col-lg-12">
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        Edit Height  Record
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Height Number</label>
                        @Html.TextBoxFor(m => m.HeightNumber, new { @onkeypress = "return isNumber(event)", @Placeholder = "Enter Height Number", @id = "eHeightNumber", @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal" id="closeEdit">Close</button>
                    <button type="submit" class="btn btn-primary">Update Height</button>
                </div>
            </div>
        </div>
    </div>
</div>
}
