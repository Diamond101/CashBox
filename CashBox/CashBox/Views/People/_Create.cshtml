@model CashBoxModel.People

@using (Ajax.BeginForm("_Create", "People", new AjaxOptions()
{
    Confirm = "Are you sure you want to create this Memeber?",
    LoadingElementId = "divLoading",
    OnBegin = "Begin",
    InsertionMode = InsertionMode.Replace, 
    UpdateTargetId = "list",
    OnSuccess = "Successful",
    OnFailure = "Failed"
}))
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12">
        <div class="modal fade" id="createMemeber" tabindex="-1" role="dialog" aria-labelledby="createMemeber" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Memeber </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">First Name *</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(u => u.FirstName, new { @Placeholder = "FirstName", @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Surname *</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(u => u.Surname, new { @Placeholder = "Surname", @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Date of Birth *</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(u => u.DateOfBirth, new { @type = "date", @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Weight *</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(u => u.Weight, (SelectList)ViewBag.Weight, "Select Weight", new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            @*<div class="col-md-4">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Age *</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(u => u.Age, new { @onkeypress = "return isNumber(event)", @Placeholder = "Age", @class = "form-control", @required = "required" })
                </div>
            </div>
        </div>*@
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Height *</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(u => u.Height, (SelectList)ViewBag.Height, "Select Height", new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Hair Colour *</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(u => u.HairColour, (SelectList)ViewBag.HairColor, "Select Hair Colour", new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                           
                           
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal" id="closeCreate">Close</button>
                        <button type="submit" class="btn btn-primary">Add New Member</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
