@using System.Globalization

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-account-location text-info icon-lg"></i>
                        </div>
                        <div class="float-right">
                            <p class="mb-0 text-right">New Member</p>
                            <div class="fluid-container">
                                <h3 class="font-weight-medium text-right mb-0">@ViewBag.NewMember</h3>
                            </div>
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="mdi mdi-alert-octagon mr-1" aria-hidden="true"></i> New Member in System
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-receipt text-warning icon-lg"></i>
                        </div>
                        <div class="float-right">
                            <p class="mb-0 text-right">Weight</p>
                            <div class="fluid-container">
                                <h3 class="font-weight-medium text-right mb-0">@ViewBag.NewWeight</h3>
                            </div>
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i> Total Number of Weight in System
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-poll-box text-success icon-lg"></i>
                        </div>
                        <div class="float-right">
                            <p class="mb-0 text-right">Height</p>
                            <div class="fluid-container">
                                <h3 class="font-weight-medium text-right mb-0">@ViewBag.NewHeight</h3>
                            </div>
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="mdi mdi-calendar mr-1" aria-hidden="true"></i> Total Number of Height in System
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-cube text-danger icon-lg"></i>
                        </div>
                        <div class="float-right">
                            <p class="mb-0 text-right">Deleted Member</p>
                            <div class="fluid-container">
                                <h3 class="font-weight-medium text-right mb-0">@ViewBag.Deleted</h3>
                            </div>
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="mdi mdi-reload mr-1" aria-hidden="true"></i> Deleted Member
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-7 grid-margin stretch-card">
            <!--weather card-->
            <div class="card card-weather">
                <div class="card-body">
                    <div class="weather-date-location">
                        <h3>@DateTime.Now.DayOfWeek</h3>
                        <p class="text-gray">
                            <span style="" class="weather-date">@DateTime.Now.ToString("F", CultureInfo.CreateSpecificCulture("en-US"))</span>
                            <br />
                            <span class="weather-location">Cash Box Technology, Technology Lagos State</span>
                        </p>
                        
                    </div>
                    <div class="weather-data d-flex">
                        <div class="mr-auto">
                            <h4 class="display-3">
                                Cash Box Group Portal
                            </h4>
                            <p>
                                ICT Development Group
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="d-flex weakly-weather">
                        <div class="weakly-weather-item">
                            <p class="mb-0">
                                Cash Box Technology, Technology Lagos State
                            </p>
                        </div>
                        <div class="weakly-weather-item">
                            <p class="mb-1">
                                Cash Box Technology, Technology Lagos State
                            </p>
                        </div>
                        <div class="weakly-weather-item">
                            <p class="mb-1">
                                Cash Box Technology, Technology Lagos State
                            </p>
                        </div>
                        <div class="weakly-weather-item">
                            <p class="mb-1">
                                Cash Box Technology, Technology Lagos State
                            </p>
                        </div>
                        <div class="weakly-weather-item">
                            <p class="mb-1">
                                Cash Box Technology, Technology Lagos State
                            </p>
                        </div>
                        <div class="weakly-weather-item">
                            <p class="mb-1">
                                Cash Box Technology, Technology Lagos State
                            </p>
                        </div>
                        <div class="weakly-weather-item">
                            <p class="mb-1">
                                Cash Box Technology, Technology Lagos State...
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!--weather card ends-->
        </div>
        <div class="col-lg-5 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-5">Cash Box Performance - As at today @DateTime.Now.ToShortDateString()</h2>
                    <div class="wrapper mt-4">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Total Member</p>
                            <p class="mb-2 text-primary">@ViewBag.NewMember <span>( @ViewBag.NewMembe %)</span></p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.NewMember%" aria-valuenow="100"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="wrapper mt-4">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Deleted Member</p>
                            <p class="mb-2 text-success">@ViewBag.Deleted <span>(@ViewBag.Delete %)</span></p>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.Deleted%" aria-valuenow="0"
                         aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                </div>
                <div class="wrapper mt-4">
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">Height in System</p>
                        <p class="mb-2 text-success">@ViewBag.NewHeight <span>(@ViewBag.NewHeightPercent %)</span></p>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.NewHeight%" aria-valuenow="0"
                             aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="wrapper mt-4">
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">Weight in System</p>
                        <p class="mb-2 text-success">@ViewBag.NewWeight <span>(@ViewBag.NewWeightPercent %)</span></p>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.NewWeight%" aria-valuenow="0"
                             aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                
                
                </div>
            </div>
        </div>
    </div>
    
</div>


