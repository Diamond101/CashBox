@model CashBoxModel.HairColour

@using (Ajax.BeginForm("_Delete", "HairColour", new AjaxOptions()
{
    Confirm = "Are you sure you want to delete this Hair Colour?",
    LoadingElementId = "divLoading",
    OnBegin = "DeleteBegin",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "list",
    OnSuccess = "DeleteSuccessful",
    OnFailure = "Failed"

}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID, new { @Id = "txtDeleteID" })

    <input type="submit" id="btnDelete" value="" style="display: none" />
}

