@*@using CashBoxModelModel
@using CashBoxModelModel.ViewModel*@
@model IEnumerable<CashBoxModel.Users>
@*@{
    Users userSession = (Users)HttpContext.Current.Session["UserSession"];
}*@

<table class="table table-striped" id="example">
    <thead>
        <tr>
            <th>SN</th>
            <th>Photo</th>
            <th>First Name</th>
            <th>Surname</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>            
            <th>Date Created</th>           
            <th>User Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var modelitem in Model)
        {
            i++;
            <tr>
                <td class="py-1">@i</td>
                <td><img src="@modelitem.Image" /></td>
                <td>@Html.DisplayFor(m => modelitem.FirstName)</td>
                <td>@Html.DisplayFor(m => modelitem.Surname)</td>
                <td>@Html.DisplayFor(m => modelitem.DateOfBirth, "_ShortDateTime")</td>
                <td>@Html.DisplayFor(m => modelitem.Address)</td>
                <td>@Html.DisplayFor(m => modelitem.Email)</td>
                <td>@Html.DisplayFor(m => modelitem.Phone)</td>  
                <td>@Html.DisplayFor(m => modelitem.DateCreated, "_ShortDateTime")</td>
                <td>@Html.DisplayFor(m => modelitem.Status)</td>
                <td>
                        <button id="@modelitem.ID" type="button" onclick="loadDetails(this.id);" class="btn btn-sm btn-outline-success btn-fw" data-toggle="modal" data-target="#editModal" data-keyboard="false" data-backdrop="static"><i class="mdi mdi-upload"></i>Edit</button>
                        <button id="@modelitem.ID" type="button" onclick="ShowDeletePopUp(this.id);" class="btn btn-sm btn-outline-danger btn-fw"><i class="mdi mdi-alert-outline"></i>Delete</button>
                   
                </td>
            </tr>
        }
    </tbody>
</table>