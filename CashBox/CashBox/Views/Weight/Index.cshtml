@{
    ViewBag.Title = "Weight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title"> REGISTER WEIGHT</h4>
                                <button style="float: right" type="button" class="btn btn-inverse-primary btn-fw" data-toggle="modal" data-target="#createWeight">Add Weight</button>
                                <br /><br />
                                <div class="table-responsive" id="list">
                                    @Html.Partial("_List")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="divFormCreate">
    @Html.Partial("_Create", new CashBoxModel.Weight())
</div>
<div id="divFormEdit">
    @Html.Partial("_Edit", new CashBoxModel.Weight())
</div>
<div id="divFormDelete" style="display: none">
    @Html.Partial("_Delete", new CashBoxModel.Weight())
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#Weight').DataTable();
    });

    function loadDetails(id) {
        $.ajax({
            url: '@Url.Action("_LoadEdit", "Weight")',
            method: "POST",
            cache: false,
            data: { id: id },
            success: function (weight) {
                $('#txtweightID').val(weight.ID);
                $('#eWeightValue').val(weight.WeightValue);
            },
            error: function () {
                alert('Cannot fetch unit record.');
            }
        });
    }

    function ShowDeletePopUp(id) {
        $('#txtDeleteID').val(id);
        $('#btnDelete').click();
    }

    function Begin() {

    }

    function Successful() {
        $('#closeCreate').click();
        alert('New Weight added successfully.');
        $('#Weight').DataTable();
    }

    function UpdateBegin() {

    }

    function UpdateSuccessful() {
        $('#closeEdit').click();
        alert('Weight record updated successfully.');
        $('#Weight').DataTable();
    }

    function DeleteBegin() {

    }

    function DeleteSuccessful() {
        alert('Weight record deleted successfully.');
        $('#Weight').DataTable();
    }

    function Failed() {
        alert('Operation failed.');
    }
</script>
